<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.ufc.lsbd.eduardo.mynotes2.EditNote">

    <EditText
        android:id="@+id/editTextTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextContent2"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="note title" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextContent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextTitle2"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="note content"
        android:inputType="textMultiLine" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextData2"
        android:inputType="date"
        android:layout_below="@+id/editTextContent2"
        android:layout_alignParentStart="true"
        android:hint="Data"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/button4"
        android:onClick="update"
        android:layout_below="@+id/editTextData2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/button5"
        android:layout_below="@+id/editTextData2"
        android:onClick="back"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apagar"
        android:id="@+id/button"
        android:onClick="apagar"
        android:layout_below="@+id/editTextData2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
